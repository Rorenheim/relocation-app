{
    "name": "relocation-planner",
    "version": "1.0.0",
    "description": "A relocation planning app for moving from Berlin to Frankfurt",
    "main": "server.js",
    "scripts": {
        "start": "node server.js",
        "dev": "nodemon server.js",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "build:css": "tailwindcss -i ./src/input.css -o ./public/styles.css --watch",
        "build": "tailwindcss -i ./src/input.css -o ./public/styles.css"
    },
    "dependencies": {
        "axios": "^1.9.0",
        "body-parser": "^1.20.2",
        "cheerio": "^1.0.0",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "daisyui": "^4.12.24",
        "express": "^4.18.2",
        "moment": "^2.30.1",
        "puppeteer": "^24.7.2"
    },
    "devDependencies": {
        "@babel/core": "^7.24.0",
        "@babel/preset-env": "^7.24.0",
        "@testing-library/jest-dom": "^6.4.2",
        "@testing-library/user-event": "^14.5.2",
        "autoprefixer": "^10.4.16",
        "babel-jest": "^29.7.0",
        "identity-obj-proxy": "^3.0.0",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "jsdom": "^24.0.0",
        "nodemon": "^3.0.3",
        "postcss": "^8.4.31",
        "tailwindcss": "^3.3.3"
    },
    "engines": {
        "node": ">=16.x"
    },
    "license": "MIT",
    "jest": {
        "testEnvironment": "jsdom",
        "setupFilesAfterEnv": [
            "<rootDir>/jest.setup.js"
        ],
        "moduleNameMapper": {
            "\\.(css|less|scss|sass)$": "identity-obj-proxy"
        },
        "transform": {
            "^.+\\.js$": "babel-jest"
        }
    }
}
