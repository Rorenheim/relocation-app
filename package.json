{
    "name": "relocation-planner",
    "version": "1.0.0",
    "description": "A relocation planning app for moving from Berlin to Frankfurt",
    "main": "server.js",
    "scripts": {
        "start": "node server.js",
        "start:glitch": "NODE_ENV=production node server.js",
        "dev": "nodemon server.js",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "build:css": "tailwindcss -i ./src/input.css -o ./public/styles.css --watch",
        "build": "tailwindcss -i ./src/input.css -o ./public/styles.css",
        "postinstall": "node fix-express.js"
    },
    "dependencies": {
        "axios": "1.5.1",
        "body-parser": "1.19.0",
        "cheerio": "1.0.0",
        "compression": "1.7.4",
        "cors": "2.8.5",
        "daisyui": "4.4.19",
        "express": "4.17.1",
        "moment": "2.29.1"
    },
    "devDependencies": {
        "@babel/core": "7.22.9",
        "@babel/preset-env": "7.22.9",
        "@testing-library/jest-dom": "5.16.5",
        "@testing-library/user-event": "14.4.3",
        "autoprefixer": "10.4.14",
        "babel-jest": "29.5.0",
        "identity-obj-proxy": "3.0.0",
        "jest": "29.5.0",
        "jest-environment-jsdom": "29.5.0",
        "jsdom": "22.1.0",
        "nodemon": "3.0.1",
        "postcss": "8.4.27",
        "tailwindcss": "3.3.3"
    },
    "engines": {
        "node": "12.x"
    },
    "pnpm": {
        "overrides": {
            "express": "4.17.1"
        },
        "peerDependencyRules": {
            "ignoreMissing": ["*"]
        }
    },
    "resolutions": {
        "express": "4.17.1"
    },
    "license": "MIT",
    "jest": {
        "testEnvironment": "jsdom",
        "setupFilesAfterEnv": [
            "<rootDir>/jest.setup.js"
        ],
        "moduleNameMapper": {
            "\\.(css|less|scss|sass)$": "identity-obj-proxy"
        },
        "transform": {
            "^.+\\.js$": "babel-jest"
        }
    }
}
